<?xml version="1.0"?>
<ruleset name="Standard">
    <description>PHP_CodeSniffer configuration using PSR-12 and PSR-5 standard</description>

    <!-- Use PSR-12 as the base coding standard -->
    <rule ref="PSR12" />

    <!-- Add generic PHPDoc sniffs -->
    <rule ref="Generic.Commenting.DocComment" />

    <!-- Exclude the file-level docblock -->
    <exclude name="Generic.Commenting.FileComment" />

    <!-- Include all PHP files in the current directory and subdirectories -->
    <file>./</file>

    <!-- Report only errors (not warnings) -->
    <!-- <arg name="severity" value="5"/> -->
</ruleset>
